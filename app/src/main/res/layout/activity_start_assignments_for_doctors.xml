<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartAssignmentsForDoctors"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/nameofassignment"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Click to add Questions"
        android:textSize="30dp"
        android:textAlignment="center"
        android:id="@+id/questions"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="first answer"
                android:layout_margin="10dp"
                android:id="@+id/ans1"
                />
            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Seconed answer"
                android:layout_margin="10dp"
                android:id="@+id/ans2"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Third answer"
                android:layout_margin="10dp"
                android:id="@+id/ans3"
                />
            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Fourth answer "
                android:layout_margin="10dp"
                android:id="@+id/ans4"
                />
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Right answe"
            android:id="@+id/rightans"
            />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:id="@+id/upload"
            />



    </LinearLayout>

</LinearLayout>